
<div class="course-show-header">
  <div class="row wrapper-participants-display">
    <h1 class="white-shadow-text text-center" id="group-participants-title"><%= @group.name %></h1>

    <!-- POUR TOUS-->

    <!-- Liste des participants -->
    <div class="people-list">
    <h3>Liste des participants</h3>

      <div class="row">
        <% @group.users.each do |user|%>

          <div class="user-card col-xs-4 col-sm-3 text-center">
              <div>
                <%= render 'user-photo', user: user,  id: "user-card-photo", class: "avatar" %>
              </div>

              <div class="white-text">
                <%= user.first_name %>
              </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Liste des coaches -->
    <div class="people-list">
    <h3>Liste des coaches</h3>

      <% if @group.coaches.count >0 %>
        <div class="row">
          <% @group.coaches.each do |coach|%>

            <div class="user-card col-xs-4 col-sm-3 text-center">
                <div>
                  <%= render 'user-photo', user: coach.user,  id: "user-card-photo", class: "avatar" %>
                </div>

                <div class="white-text">
                  <%= coach.first_name %>
                </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>



    <!-- Owner du groupe -->
    <div class="people-list">
    <h3>CrÃ©ateur du groupe</h3>

      <div class="row">
          <div class="user-card col-xs-4 col-sm-3 text-center">
              <div>
                <%= render 'user-photo', user: @group.owner,  id: "user-card-photo", class: "avatar" %>
              </div>

              <div class="white-text">
                <%= @group.owner.first_name %>
              </div>
          </div>
      </div>
    </div>

    <!-- OWNER ONLY: Liste des invitations en cours + module d'invitations -->

  </div>
</div>
