<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      <h1>Mon profil</h1>
      <% if @user.photo %>
        <%= cl_image_tag(@user.photo.path, gravity: :face,
                                           width: 100,
                                           height: 100,
                                           crop: "fill",
                                           radius: :max) %>
      <% end %>
      <p>Prénom: <%= @user.first_name %></p>
      <p>Nom: <%= @user.last_name %></p>
      <p>Email: <%= @user.email %></p>
      <p>Téléphone: <%= @user.phone_number %></p>
      <%= link_to "Editer mon profil utilisateur", edit_user_path(@user) %>
      <br>
      <% if !current_user.coach_id.nil? %>
        <p>Description: <%= @user.coach.description %></p>
        <p>Sports: <%= @user.coach.sports.map {|s| s.name}.reduce(:+) %></p>
        <% end%>
      <br>
      <%= link_to "Editer mon profil coach", edit_user_path(@user) %>


    </div>
  </div>
</div>
