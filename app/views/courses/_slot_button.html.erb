<% if policy(slot).desinscription? %>
  <%= form_tag orders_path do %>
    <%= hidden_field_tag 'slot_id', slot.id %>
    <%= button_tag type: "submit", class: "buy-btn btn-sm", disabled: true do %>
      <i class="fa fa-check-circle-o"></i> Inscrit
    <% end %>
    <%= link_to "Me désinscrire", desinscription_slot_path(slot),
        method: 'patch',
        remote: true,
        data: { confirm: "Êtes-vous sûr de vouloir vous désinscrire?" } %>
  <% end %>
<% elsif slot.is_full? %>
  <%= form_tag orders_path do %>
    <%= hidden_field_tag 'slot_id', slot.id %>
    <%= submit_tag 'Complet', class: "buy-btn btn-sm", disabled: true %>
  <% end %>
<% else %>
  <%= form_tag orders_path do %>
    <%= hidden_field_tag 'slot_id', slot.id %>
    <%= submit_tag "M'inscrire", class: "buy-btn btn-sm" %>
  <% end %>
<% end %>
