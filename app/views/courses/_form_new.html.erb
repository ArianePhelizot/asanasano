<%= simple_form_for([group, course], remote: true) do |f| %>
  <%= f.input :name %>
  <%= f.association :sport, collection: Sport.all %>
  <%= f.input :address %>
  <%= f.input :meeting_point %>
  <%= f.input :capacity_max %>
  <%= f.input :details, as: :text %>
  <%= f.association :coach, collection: course.group.coaches %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
