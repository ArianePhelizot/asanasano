<div class="col-xs-6">
  <p><i class="fa fa-calendar"></i>  <%= l(slot.date, format: :long) %></p>
  <p><i class="fa fa-clock-o"></i>  <%= slot.start_at.strftime("%H:%M") %> - <%= slot.end_at.strftime("%H:%M") %></p> <!-- affiche start_at sous le format 14:06 --><!-- affiche le end_at sous le format 14:06 -->
  <p><i class="fa fa-users"></i> <%= slot.users.count %></p>
  <p><strong>Places restantes: <%= course.capacity_max - slot.users.count %></strong></p>
</div>
<div class="col-xs-6 price-slot">
  <p><%= humanized_money_with_symbol slot.price %></p> <!-- helper qui affiche le prix avec € -->
  <% if policy(slot).desinscription? %>
    <%= form_tag orders_path do %>
      <%= hidden_field_tag 'slot_id', slot.id %>
      <%= button_tag type: "submit", class: "buy-btn btn-sm", disabled: true do %>
        <i class="fa fa-check-circle-o"></i> Inscrit
      <% end %>
      <%= link_to "Se désinscrire", desinscription_slot_path(slot),
          method: 'patch',
          remote: true,
          data: { confirm: "Êtes-vous sûr de vouloir vous désinscrire?" } %>
    <% end %>
  <% elsif slot.is_full? %>
    <%= form_tag orders_path do %>
      <%= hidden_field_tag 'slot_id', slot.id %>
      <%= submit_tag 'Complet', class: "buy-btn btn-sm", disabled: true %>
    <% end %>
  <% else %>
    <%= form_tag orders_path do %>
      <%= hidden_field_tag 'slot_id', slot.id %>
      <%= submit_tag "M'inscrire", class: "buy-btn btn-sm" %>
    <% end %>
  <% end %>
</div>
<br>
<div class="col-xs-12">
  <div class="text-center">
    <% if policy(slot).edit? %>
      <%= link_to edit_course_slot_path(course, slot) do %>
        <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
      <% end %>
    <% end %>
    <hr>
  </div>
</div>
