<%= simple_form_for [@group, @course] do |f| %>
  <%= f.input :name, label: "Nom de l'activité", placeholder: "Yoga nidra niveau 1, Pilates tout niveau, Prép semi-marathon ?" %>
  <%= f.association :coach, collection: Coach.all, label: "Coach" %>
  <%= f.input :content, as: :text, label: "Description", placeholder: "Quelques infos sur le type de cours proposé et l'approche...Cette partie pourra aussi être complétée ultérieurement par le coach/professeur/instructeur, que vous aurez retenu." %>
  <%= f.input :address, label: "Adresse" %>
  <%= f.input :meeting_point, label: "Point de rendez-vous" %>
  <%= f.input :details, as: :text, label: "Détails", placeholder: "C'est ici qu'il faut préciser tous les aspects pratiques: code d'accès, tenue, matériel, installations... " %>
  <%= f.input :capacity_max, label: "Nombre de participants maximum", collection: 1..500, default: 1 %>
  <%= f.association :sport, label: "Catégorie", collection: Sport.all.order('name ASC')%>
  <%= f.button :submit, "Enregistrer", class: "btn" %>
<% end %>
