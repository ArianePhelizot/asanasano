<!-- MODAL PRESENTATION DU COACH-->
<div class="modal fade" id="CoachModal" tabindex="-1" role="dialog" aria-labelledby="CoachInfo">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= @course.coach.name %></h4>
      </div>

      <div class="modal-body"> <!-- MODAL BODY -->
        <div class="row">
          <div class="col-md-4"> <!-- LEFT PART OF MODAL -->
            <!-- Picture -->
            <div class="text-center padded-sm">
              <% if @course.coach&.user&.photo? %>
                <%= cl_image_tag @course.coach.user.photo.path, gravity: :face,
                                             width: 200,
                                             crop: :fill,
                                             radius: :max,
                                             class: "avatar-profile" %>
              <% else %>
                <%= image_tag "https://maxcdn.icons8.com/Share/icon/Users//user_male_circle_filled1600.png", id:"coach-pic"%>
              <% end %>
            </div>
            <!-- Mail -->
            <div class="list-inline text-justify">
              <li><i class="fa fa-envelope-o" aria-hidden="true"></i></li>
              <li><%= link_to @course.coach.user.email, "mailto:" + @course.coach.user.email %></li>
            </div>
            <!-- Tel -->
            <div class="list-inline text-justify">
              <li><i class="fa fa-phone" aria-hidden="true"></i></li>
              <li><%= @course.coach.user.phone_number %></li>
            </div>
            <div>
              <% if @course.coach.website.present?  %>
                <%= link_to @course.coach.website, target: :_blank do %>
                  <i class="fa fa-globe modal-social-links" aria-hidden="true"></i>
                <% end %>
              <% end %>
              <% if @course.coach.facebook.present?  %>
                <%= link_to @course.coach.facebook, target: :_blank do %>
                  <i class="fa fa-facebook modal-social-links" aria-hidden="true"></i>
                <% end %>
              <% end %>
              <% if @course.coach.instagram.present?  %>
                <%= link_to @course.coach.instagram, target: :_blank do %>
                  <i class="fa fa-instagram modal-social-links" aria-hidden="true"></i>
                <% end %>
              <% end %>
              <% if @course.coach.twitter.present?  %>
                <%= link_to @course.coach.twitter, target: :_blank do %>
                  <i class="fa fa-twitter modal-social-links" aria-hidden="true"></i>
                <% end %>
              <% end %>
              <% if @course.coach.linkedin.present?  %>
                <%= link_to @course.coach.linkedin, target: :_blank do %>
                  <i class="fa fa-linkedin modal-social-links" aria-hidden="true"></i>
                <% end %>
              <% end %>

            </div>
          </div>
          <div class="col-md-8"> <!-- RIGHT PART OF MODAL -->
            <div class="mg-btm-1em">
              <h5>PRÉSENTATION</h5>
              <p><%= @course.coach.description%></p>
            </div>
            <div class="mg-btm-1em">
              <h5>FORMATION</h5>
              <p><%= @course.coach.training%></p>
            </div>
            <div class="mg-btm-1em">
              <h5>EXPÉRIENCE</h5>
              <p><%= @course.coach.experience%> années</p>
            </div>
            <div class="mg-btm-1em">
              <h5>ACTIVITÉS</h5>
              <p><%= @course.coach.sports.map {|s| s.name.capitalize}.join(", ") %></p>
            </div>
            <div class="mg-btm-1em">
              <h5>LANGUES PARLÉES</h5>
              <p><%= @course.coach.languages.map {|language| language}.join(", ") %></p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<!-- END OF COACH PRESENTATION MODAL-->
