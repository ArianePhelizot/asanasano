<div class="card">

  <!-- Affichage du statut seulement pour les group owner et coach -->
  <div class="course_status">
    <% if policy(course).update? %>
      <% if course.draft? %>
        <p>non publié</p>
      <% else course.active? %>
        <p>publié</p>
      <% end %>
    <% end %>
  </div>

  <!-- Infos communes -->
  <div class="course-name">
    <%= link_to course.name, course_path(course) %>
  </div>
  <div>
    <% if course.slots.any? %>
    <p><%= course.sorted_slots.first.date.strftime("%A %d %B %Y") %></p>
    <% end %>
  </div>
  <div class="card-user avatar">
    <%= image_tag "avatar.jpg", class: "avatar"%>
  </div>
  <%= cl_image_tag course.sport.icon.path, width: 40, height: 40, crop: :fill, class:"sport-icon" %>

</div>
