<div class="card">

  <!-- Affichage du statut seulement pour les group owner et coach -->
  <div class="course_status">
    <% if policy(course).update? %>
      <% if course.draft? %>
        <p>non publié</p>
      <% else course.active? %>
        <p>publié</p>
      <% end %>
    <% end %>
  </div>

  <!-- Infos communes -->
  <div class="course-name">
    <%= link_to course.name, course_path(course) %>
    <% if !course.coach_id.nil? %>
      <p>avec <%= course.coach.first_name %></p>
    <% end %>
  </div>
  <div>
    <% if !course.next_slot.nil? %>
      <p>Prochaine séance</p>
      <p><%= course.next_slot.date.strftime("%a %d %B %Y") %></p>
      <p><i class="fa fa-calendar" aria-hidden="true"></i>  <%= l(course.next_slot.date, format: :long) %></p>
      <p><i class="fa fa-clock-o" aria-hidden="true"></i>  <%= course.next_slot.start_at.strftime("%H:%M") %> - <%= course.next_slot.end_at.strftime("%H:%M") %></p>
      <p><i class="fa fa-user-o" aria-hidden="true"></i>  <%= course.next_slot.users.count %> / <%= course.capacity_max %></p>
    <% else %>
      <p>Pas de prochaine séance prévue</p>
    <% end %>
  </div>
  <div class="card-user avatar">
    <%= image_tag "avatar.jpg", class: "avatar"%>
  </div>
  <%= cl_image_tag course.sport.icon.path, width: 40, height: 40, crop: :fill, class:"sport-icon" %>

</div>
