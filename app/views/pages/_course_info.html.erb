<div class="course-info">
  <div>
    <%= cl_image_tag course.sport.icon.path, width: 40, height: 40, crop: :fill, class:"sport-icon" %>
  </div>
  <div class="course-name-div">
    <p class="course-name">
      <%= course.name %>
    </p>
  </div>
  <div class="coach-info">
    <div class="coach-name">
    Coach:
      <% if course.coach_id.present? %>
        <%= course.coach.first_name %>
      <% end %>
    </div>

    <div class="avatar" id="avatar-coach">
      <% if course.coach.user&.photo? %>
        <%= cl_image_tag course.coach.user.photo.path, gravity: :face,
                                                           width: 50,
                                                           crop: :fill,
                                                           radius: :max,
                                                           class: "avatar" %>
    <% else %>
          <%= image_tag "https://maxcdn.icons8.com/Share/icon/Users//user_male_circle_filled1600.png", class: "avatar" %>
    <% end %>
    </div>


  </div>
</div>
