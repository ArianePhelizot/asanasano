<div class="container-dashboard">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-2 col-lg-offset-2 bordered margin-button-ajouter text-center">
      <% if policy(Group).new? %>
      <%= link_to "Ajouter un nouveau groupe", new_group_path  %>
      <% end %>
    </div>
    <div class="row margin-cards">row
      <% @user.groups.sort.each do |group| %>
      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-10 col-lg-offset-1 padded bordered">
        <h2 class="bordered"><%= group.name %></h2>
        <% group.courses.sort.each do |course| %>
        <div class="col-xs-3 padded bordered">
          <%= cl_image_tag course.sport.icon.path, width: 40, height: 40, crop: :fill %>
          <p><%= course.name %></p>
        </div>
        <% end %>
        <div class="col-xs-10 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-12 padding-bottom">
          <% if policy(group).edit? %>
          <%= link_to "CrÃ©er un nouveau cours", new_group_course_path(group), class:"create btn btn-success"  %>
          <% end %>
          <% if policy(group).edit? %>
          <%= link_to "Editer", edit_group_path(group), class:"edit btn btn-primary" %>
          <% end %>
          <% if policy(group).destroy? %>
          <%= link_to "Supprimer", group_path(group), method: "delete", class:"delete btn btn-danger" %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
