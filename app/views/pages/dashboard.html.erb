<div class="dashboard-bg-container">
  <div class="row bord">
    <div class="col-xs-offset-1 col-sm-6 col-md-12 col-lg-6">
      <div class="add_a_group_button">
        <% if policy(Group).new? %>
        <%= link_to "Ajouter un nouveau groupe", new_group_path, class:"add-a-group-button btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
  <% @user.groups.sort.each do |group| %>
  <div class="groups-card">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-10 col-lg-offset-1">
        <div class="group-title">
          <%= group.name%>
        </div>
      </div>
    </div>
    <div class="row">
      <% group.courses.sort.each do |course| %>
      <div class="col-xs-12  col-sm-6 col-md-4 col-lg-3">
        <div class="card">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <p><%= course.name %></p>
            <p>Very cool stuff, useful and smart</p>
            <p>Very cool stuff, useful and smart</p>
            <p>Very cool stuff, useful and smart</p>
            <p>Very cool stuff, useful and smart</p>
          </div>
          <div class="card-user avatar">
            <%= image_tag "avatar.jpg", class: "avatar" %>
          </div>
          <%= cl_image_tag course.sport.icon.path, width: 40, height: 40, crop: :fill %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-10 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-12">
        <% if policy(group).edit? %>
        <%= link_to "CrÃ©er un nouveau cours", new_group_course_path(group), class:"create-button btn btn-primary"  %>
        <% end %>
        <% if policy(group).edit? %>
        <%= link_to "Editer", edit_group_path(group), class:"delete-button btn btn-warning" %>
        <% end %>
        <% if policy(group).destroy? %>
        <%= link_to "Supprimer", group_path(group), method: "delete", class:"delete-button btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
