<div class="container-dashboard">
  <div class="row">
    <div class="col-lg-2 col-lg-offset-1 bordered margin-button-ajouter text-center">
      <% if policy(Group).new? %>
      <%= link_to "Ajouter un nouveau groupe", new_group_path  %>
      <% end %>
    </div>
    <% @user.groups.sort.each do |group| %>
    <div class="row margin-cards">
      <div class="col-lg-8 col-lg-offset-2 bordered padded">
        <h2><%= group.name %></h2>
        <% if policy(group).edit? %>
        <%= link_to "Editer", edit_group_path(group) %>
        <% end %>
        <% if policy(group).destroy? %>
        <%= link_to "Supprimer", group_path(group), method: "delete" %>
        <% end %>
        <% if policy(group).edit? %>
        <%= link_to "CrÃ©er un nouveau cours", new_group_course_path(group)  %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
