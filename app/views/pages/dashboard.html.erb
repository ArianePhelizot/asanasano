<!-- WRAPPER DASHBOARD -->
<div class="wrapper-dashboard">
  <!-- MES PROCHAINES SEANCES -->
  <div>
    <h2>Mes prochaines séances</h2>
  </div>
  <div class="mes-prochaines-seances-container">
    <div class="row">

        <% @user.next_slots.each do |slot| %>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
        <%= render 'dashboard-slot-card', slot: slot %>

      </div>
      <% end %>
    </div>
  </div>
  <!-- TOUS MES COURS -->
  <div class="toutes-mes-activites-title">
    <h2>Mes activités</h2>
  </div>
  <!-- PRESENTATION DE TOUS MES GROUPES AVEC LES COURS ASSOCIES -->
  <div class="row">
    <div class="col-md-9 col-lg-10">
      <!-- AJOUTER UN NOUVEAU GROUPE -->
      <div class="add-a-group-button">
        <% if policy(Group).new? %>
          <%= link_to "Ajouter un nouveau groupe", new_group_path, class:"btn add-a-new-group" %>
        <% end %>
      </div>
    </div>
  </div>

  <% @user.groups.sort.each do |group| %>
    <!-- GROUP-CONTAINER -->
    <div class="group-container">
          <div id="edit-button">
            <% if policy(group).edit? %>
              <%= link_to "Editer", edit_group_path(group), class:"edit-button btn btn-warning"%>
            <% end %>
          </div>
          <div id="delete-button"">
            <% if policy(group).destroy? %>
              <%= link_to "Supprimer", group_path(group),
                         method: "delete",
                         data: { confirm: "Êtes-vous sûr de vouloir supprimer le groupe #{group.name.capitalize}?" },
                         class:"delete-button btn btn-danger"
              %>
            <% end %>
          </div>
          <div class="group-title">
            <%= group.name%>
          </div>
          <div class="row">
            <div class="col-xs-offset-4 col-sm-offset-4 col-md-offset-5">
              <div>
                <% if policy(group).edit? %>
                  <%= link_to "Créer un nouveau cours", new_group_course_path(group), class:"btn btn-success", id:"create-a-new-course-button" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row">
            <% group.courses.sort.each do |course| %>

              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
                <!-- Si coach ou group owner => afficher tous les cours -->
                <% if policy(course).update? %>
                  <%= render 'dashboard-course-card', course: course %>
                <!-- Sinon, n'afficher que les acours actifs pour les simples membres -->
                <% else %>
                  <% if course.active? %>
                  <% end %>
                <% end %>
              </div>

          <% end %>
           </div>
        </div>
  <% end %>
</div>

